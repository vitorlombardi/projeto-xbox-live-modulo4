datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Usuarios {
  id        Int    @id @default(autoincrement())
  
  nome      String
  sobrenome String
  email     String @unique
  senha     String
  cpf       String
  admin     Boolean

  perfils   Perfils[]
}

model Perfils{
  id        Int @id @default(autoincrement())
  nome      String
  imagemUrl String

  usuario Usuarios @relation(fields: [usuarioID], references: [id])
  usuarioID Int
}

