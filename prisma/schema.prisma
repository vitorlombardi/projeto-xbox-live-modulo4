datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Usuarios {
  id        Int    @id @default(autoincrement())
  
  nome      String
  sobrenome String
  email     String @unique
  senha     String
  cpf       String
  admin     Boolean @default(false)

  perfils   Perfils[] 
}

model Perfils{
  id        Int @id @default(autoincrement())
  nome      String
  imagemUrl String

  usuario   Usuarios @relation(fields: [usuarioID], references: [id])
  usuarioID Int

  jogos     Jogos[]
}

  model Jogos{
    id        Int    @id @default(autoincrement())
    nome      String
    imagemUrl String
    Descricao String
    ano       Int
    nota      Float
    trailer   String
    gameplay  String

    perfils   Perfils[]
    
    genero    Genero[]
 }

  model Genero{
    id     Int    @id @default(autoincrement())
    nome   String
    
    jogos  Jogos[]
 }

